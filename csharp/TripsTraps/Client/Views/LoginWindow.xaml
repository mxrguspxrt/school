<Window x:Class="Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="600">
    <Viewbox>
        <Grid Background="Gray">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" x:Name="textboxPlayerName" Text="Player"></TextBox>
            <Button Grid.Row="1" x:Name="buttonSubmit" Content="Play" Click="buttonSubmit_Click"></Button>
        </Grid>
    </Viewbox>
</Window>
