<Page
    x:Class="Trips.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trips"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <GridView HorizontalAlignment="Left" Margin="100,200,0,0">
            <Button x:ConnectionId='10' x:Name="reset" Content="Reset"                    ></Button>
        </GridView>
        <GridView HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="180" Height="180">
            <Button x:ConnectionId='1' x:Name="slot0" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='2' x:Name="slot1" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='3' x:Name="slot2" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='4' x:Name="slot3" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='5' x:Name="slot4" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='6' x:Name="slot5" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='7' x:Name="slot6" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='8' x:Name="slot7" Style="{StaticResource GameButton}"                    />
            <Button x:ConnectionId='9' x:Name="slot8" Style="{StaticResource GameButton}"                    />
        </GridView>
    </Grid>
</Page>

